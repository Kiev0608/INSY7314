# Server Configuration
NODE_ENV=development
PORT=3001
HTTPS_PORT=3443

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/secure_payments_portal
DB_HOST=localhost
DB_PORT=27017
DB_NAME=secure_payments_portal

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ARGON2_MEMORY=65536
ARGON2_PARALLELISM=2
ARGON2_TIME=3

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-key-here-min-32-chars-change-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SSL Configuration
SSL_KEY_PATH=./certs/private-key.pem
SSL_CERT_PATH=./certs/certificate.pem
FORCE_HTTPS=true

# Security Headers
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none';

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Two-Factor Authentication
TOTP_ISSUER=Secure International Payments Portal
TOTP_ALGORITHM=sha1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Banking Configuration
MIN_PAYMENT_AMOUNT=1.00
MAX_PAYMENT_AMOUNT=100000.00
SUPPORTED_CURRENCIES=USD,EUR,GBP,ZAR,JPY,CAD,AUD,CHF,SEK,NOK
DEFAULT_CURRENCY=USD

# SWIFT Configuration
SWIFT_VALIDATION=true
SWIFT_TIMEOUT=30000

# Security Scanning
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonar_token_here
MOBSF_URL=http://localhost:8000
SCOUT_SUITE_ENABLED=true
